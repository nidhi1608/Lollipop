<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvRoot"
    android:layout_marginLeft="@dimen/cell_margin"
    android:layout_marginRight="@dimen/cell_margin"
    android:layout_marginTop="@dimen/cell_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    card_view:cardBackgroundColor="#ffffff"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">
    <RelativeLayout
        android:layout_margin="@dimen/cell_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height">
        <com.makeramen.RoundedImageView
            android:id="@+id/ivProfile"
            android:scaleType="centerCrop"
            app:riv_corner_radius="32dp"
            app:riv_border_width="1px"
            app:riv_border_color="#aaaaaa"
            android:layout_width="@dimen/card_height"
            android:layout_height="@dimen/card_height" />
        <TextView
            android:id="@+id/tvName"
            android:text="@string/app_name"
            android:layout_marginLeft="@dimen/cell_margin"
            android:layout_toRightOf="@+id/ivProfile"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:fontFamily="sans-serif-thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
